{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["prebuild", "^build"],
      "outputs": ["./next/**", "!./next/cache/**"]
    },
    "prebuild": {
      "dependsOn": ["^prebuild"],
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "dev:test": {
      "cache": false
    },
    "dev:e2e": {
      "dependsOn": ["^build"],
      "cache": false
    }
  },
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": []
}
